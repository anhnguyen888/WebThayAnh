@page
@model WebThayAnh.Areas.Identity.Pages.Account.Manage.ManageUsersModel
@{
    ViewData["Title"] = "Manage Users";
}

<h1>Manage Users</h1>

<table class="table">
    <thead>
        <tr>
            <th>User Name</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@string.Join(", ", await Model.UserManager.GetRolesAsync(user))</td>
                <td>
                    <a asp-page="./EditUser" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
                    <a asp-page="./DeleteUser" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-page="./CreateUser" class="btn btn-success">Create New User</a>
