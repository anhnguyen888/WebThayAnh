@page
@model WebThayAnh.Areas.Identity.Pages.Account.Manage.ManageRolesModel
@{
    ViewData["Title"] = "Manage Roles";
}

<h1>Manage Roles</h1>

<table class="table">
    <thead>
        <tr>
            <th>Role Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model.Roles)
        {
            <tr>
                <td>@role.Name</td>
                <td>
                    <a asp-page="./EditRole" asp-route-id="@role.Id" class="btn btn-primary">Edit</a>
                    <a asp-page="./DeleteRole" asp-route-id="@role.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-page="./CreateRole" class="btn btn-success">Create New Role</a>
